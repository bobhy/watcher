    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["${input:arg1}"]
        }
    ],
    "inputs":[
        {
            "id": "arg1",
            "type": "promptString",
            "description": "first arg",
            "default": ""
        },
        {
            "id": "arg2",
            "type":"promptString",
            "description": "second arg (usually none)",
            "default": ""
        }
    ]
}